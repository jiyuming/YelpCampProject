<% layout('layouts/boilerplate') %>
<div id="map" style="width:100%; height: 300px;"></div>  <!-- !!!!!!! with 'class="..." 
                                                          Popup does not work when click an uncluster point -->
<h3 style="text-align: center">All Campgrounds</h3>
<div class="row row-cols-1 row-cols-md-3 g-4">
    <% for (let campground of campgrounds) {%>
    <div class="col">
        <div class="card h-100">
            <img src="<%= campground.images[0].url %>" class="card-img-top" alt="...">
            <div class="card-body">
                <a href="campgrounds/<%= campground._id %>" class="card-title"><%= campground.title %></a></li>
                <p class="card-text"><%= campground.location %></p>
                <p class="card-text"><%= campground.description %></p>
            </div>
        </div>
    </div>
    <%}%>
</div>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN%>';
     const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>
