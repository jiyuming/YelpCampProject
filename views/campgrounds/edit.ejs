<% layout('layouts/boilerplate') %>
<h2>Update Campground</h2>

<form action="/campgrounds/<%= campground.id %>?_method=PUT " method="POST" novalidate class="validated-form"
    enctype="multipart/form-data">
    <div class="row mb-3">
        <div class="col-sm-10">
            <label for="title" class="col-sm-2 col-form-label">Title</label>
            <input type="text" class="form-control" aria-label="First name" id="title" name="campground[title]"
                value="<%= campground.title %>" required>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10">
            <label for="location class=" class="col-sm-2 col-form-label">Location</label>
            <input type="text" class="form-control" aria-label="Last name" name="campground[location]"
                value="<%= campground.location %>" required>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10">
            <label for="description" class="col-sm-2 col-form-label">Description</label>
            <textarea type="text" class="form-control" id="description" name="campground[description]"
                required><%= campground.description %></textarea>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10">
            <label for="price" class="col-form-label">Campground Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id="price" name="campground[price]"
                    value="<%= campground.price %>" required>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10">
            <div class="form-file custom-file">
                <label for="image" class="form-label">Campground Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
                <span class="form-file-text custom-file-label"></span>
            </div>
        </div>
    </div>

    <div class="mb-3 col-sm-3">
        <% campground.images.forEach((img, i)=>{ %>
        <img src="<%= img.url %> " class="img-thumbnail" alt="">
        <div class="form-check-inline">
            <!-- value="<%= img.filename %> ">  has a space and Delete does not work!!!!! -->
            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
        </div>
        <label for="image-<%= i %> ">Delete?</label>
        <% }) %>
    </div>

    <button type=" submit" class="btn btn-primary">Update Campground</button>
</form>
<br>
<a href="/campgrounds/<%= campground.id %> ">Back to Campground</a>
